<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/hot_item_margin_top"
    android:layout_marginBottom="@dimen/hot_item_margin_bot"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorDarkWhite"
    android:layout_height="@dimen/hot_item_height">
<ImageView
    android:id="@+id/imgListHotItem"
    android:contentDescription="@null"
    android:src="@drawable/hot1"
    android:layout_width="@dimen/hot_item_height"
    android:layout_height="@dimen/hot_item_height" />
    <TextView
        android:id="@+id/tvListHotItemTop"
        android:fontFamily="monospace"
        android:textSize="@dimen/hot_item_grade_text_size"
        android:layout_marginLeft="@dimen/hot_item_grade_margin_left"
        android:layout_marginStart="@dimen/hot_item_grade_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <LinearLayout
        android:background="@color/colorMain"
        android:layout_marginLeft="@dimen/hot_item_line_margin_left"
        android:layout_marginStart="@dimen/hot_item_line_margin_left"
        android:layout_marginTop="@dimen/hot_item_grade_margin_top"
        android:layout_width="@dimen/hot_item_grade_width"
        android:layout_height="@dimen/hot_item_grade_height"/>
    <TextView
        android:id="@+id/tvListHotItemTitle"
        android:textSize="@dimen/hot_item_title_text_size"
        android:fontFamily="monospace"
        android:textColor="@color/colorBlack"
        android:text="@string/hot_item_title_defaul"
        android:layout_marginTop="@dimen/hot_item_title_margin_top"
        android:layout_marginLeft="@dimen/hot_item_title_margin_left"
        android:layout_marginStart="@dimen/hot_item_title_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvListhotItemAuthor"
        android:layout_below="@id/tvListHotItemTitle"
        android:textSize="@dimen/sub_title_text_size"
        android:fontFamily="monospace"
        android:text="@string/hot_item_title_defaul"
        android:layout_marginStart="@dimen/hot_item_title_margin_left"
        android:layout_marginLeft="@dimen/hot_item_title_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
