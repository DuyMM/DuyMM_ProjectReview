<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/light_novel_item_width"
    android:layout_marginRight="@dimen/light_novel_item_padding_right"
    android:layout_marginEnd="@dimen/light_novel_item_padding_right"
    android:layout_height="wrap_content">
<ImageView
    android:contentDescription="@null"
    android:id="@+id/imgListLightNovelItem"
    android:layout_width="@dimen/img_light_novel_width"
    android:layout_height="@dimen/img_light_novel_height" />
    <TextView
        android:id="@+id/tvListLightNovelItemTitle"
        android:textSize="@dimen/light_novel_title_text_size"
        android:textColor="@color/colorBlack"
        android:fontFamily="monospace"
        android:text="@string/title_item_light_novel_defaul"
        android:layout_below="@id/imgListLightNovelItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sub_title_text_size"
        android:text="@string/author_item_light_novel_default"
        android:layout_below="@+id/tvListLightNovelItemTitle"
        android:id="@+id/tvListLightNovelItemAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
