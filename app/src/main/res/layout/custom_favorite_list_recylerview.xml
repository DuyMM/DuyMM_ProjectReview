<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgFavoriteRecylerView"
            android:contentDescription="@null"
            android:src="@drawable/favorite1"
            android:scaleType="centerCrop"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/tvTitleFavoriteRecylerView"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textColor="@color/colorBlack"
            android:text="Bach Khoa Su Ky Toan Thu"
            android:layout_toRightOf="@id/imgFavoriteRecylerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/imgFavoriteRecylerView"
            android:layout_alignParentBottom="true"
            android:text="Mirai Saoki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="22/11/2012"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
